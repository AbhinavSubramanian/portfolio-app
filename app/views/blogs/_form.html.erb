<%= form_for(blog) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <% blog.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
